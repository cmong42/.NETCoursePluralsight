@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex flex-column justify-content-center align-items-center">
    <h3>@ViewData["Title"]</h3>

    <div class="spacer">
        <br/>
        <br/>
    </div>

    <div class="col-sm-6 col-xl-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <p asp-for="Input.Email" class="text-light m-1">Email</p>
                <input asp-for="Input.Email" class="form-control mb-3" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <p asp-for="Input.Password" class="text-light m-1">Password</p>
                <input asp-for="Input.Password" class="form-control mb-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <p asp-for="Input.ConfirmPassword" class="text-light m-1">Confirm Password</p>
                <input asp-for="Input.ConfirmPassword" class="form-control mb-3" autocomplete="new-password" aria-required="true" placeholder="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="spacer">
                <br/>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-outline-light">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
